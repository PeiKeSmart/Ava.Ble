<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:JieLi.OTA.Desktop.Views"
        x:Class="JieLi.OTA.Desktop.Views.MainWindow"
        Title="JieLi OTA - 杰理设备 OTA 升级工具"
        Width="1200" Height="750"
        MinWidth="900" MinHeight="650"
        WindowStartupLocation="CenterScreen">
    <Grid RowDefinitions="Auto,*">
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <TextBlock Text="JieLi OTA 固件升级工具" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- OTA 升级页面 -->
        <views:OtaUpgradePage Grid.Row="1" x:Name="OtaPage"/>
    </Grid>
</Window>
